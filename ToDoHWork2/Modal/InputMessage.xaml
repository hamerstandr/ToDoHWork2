<telerik:RadWindow x:Class="ToDoHWork2.Modal.InputMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        Header="InputMessage" Height="115" Width="390" telerik:StyleManager.Theme="Fluent" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Top" Margin="0,5,0,0">
        <telerik:Label x:Name="Lable1" Content="Enter your Name:" />
        <TextBox x:Name="TxtInput" Margin="10,0" KeyDown="TxtInput_KeyDown"/>

        </StackPanel>
        <Grid VerticalAlignment="Bottom">
            <telerik:RadButton Content="Ok" Width="75" HorizontalAlignment="Right" Margin="0,5,10,5" Click="Button_Click" telerik:StyleManager.Theme="Fluent"/>
        </Grid>
    </Grid>
</telerik:RadWindow>